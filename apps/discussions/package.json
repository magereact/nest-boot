{
  "name": "@nest-boot/discussions",
  "version": "0.0.0-development",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "dev:repl": "nest start --watch --entryFile repl",
    "debug": "nest start --debug --watch",
    "debug:repl": "nest start --debug --watch --entryFile repl",
    "start": "node dist/main",
    "start:repl": "node dist/repl",
    "orm": "mikro-orm",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.7.12",
    "@mikro-orm/nestjs": "^5.2.0",
    "@mikro-orm/postgresql": "^5.7.12",
    "@mikro-orm/reflection": "^5.7.12",
    "@nest-boot/auth": "workspace:*",
    "@nest-boot/database": "workspace:*",
    "@nest-boot/graphql": "workspace:*",
    "@nest-boot/health-check": "workspace:*",
    "@nest-boot/i18n": "workspace:*",
    "@nest-boot/logger": "workspace:*",
    "@nest-boot/mailer": "workspace:*",
    "@nest-boot/metrics": "workspace:*",
    "@nest-boot/queue": "workspace:*",
    "@nest-boot/queue-dashboard": "workspace:*",
    "@nest-boot/redis": "workspace:*",
    "@nest-boot/request-context": "workspace:*",
    "@nest-boot/schedule": "workspace:*",
    "@nest-boot/search": "workspace:*",
    "@nest-boot/search-engine-postgresql": "workspace:*",
    "@nest-boot/view": "workspace:*",
    "@nestjs/common": "^10.0.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.3",
    "@nestjs/graphql": "^12.0.3",
    "@nestjs/platform-express": "^10.0.3",
    "graphql": "^16.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@mikro-orm/seeder": "^5.7.12",
    "@nestjs/cli": "^10.0.5",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.66",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "18.12.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
